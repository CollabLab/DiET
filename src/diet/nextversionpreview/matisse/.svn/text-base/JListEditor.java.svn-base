    public JListEditor(final DefaultCellEditor tce,StringListParameter p){
       
      
        this.tce=tce;
        this.originalParameter=p;       
        initComponents();
        this.jLabel1.setText(p.getID());
        originalParameter =p;
        String name = ""+p.getID();
        Vector data = (Vector)p.getValue().clone();
        for(int i=0;i<originalParameter.getValue().size();i++){
            dlm.addElement(originalParameter.getValue().elementAt(i));
        }
        jList1.setModel(dlm);
        jf = new JFrame("List editor"){
            public void dispose(){
                 //updateParam=true;//false;
                 super.dispose();
                 tce.stopCellEditing();
                 
            }
