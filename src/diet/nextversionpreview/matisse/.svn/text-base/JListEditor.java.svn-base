    private void DeleteButton(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_DeleteButton
        // TODO add your handling code here:
        int[] selectedIndices = jList1.getSelectedIndices();
        if(selectedIndices==null)return;
        Vector entries = new Vector();
        for(int i=0;i<selectedIndices.length;i++){
            entries.addElement(dlm.getElementAt(i));
            System.err.println(i+"SELECTED ARE "+(String)dlm.getElementAt(selectedIndices[i]));
        }
        for(int i=0;i<entries.size();i++){
            dlm.removeElement(entries.elementAt(i));
        }
    }//GEN-LAST:event_DeleteButton

